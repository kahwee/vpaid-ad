{
  "name": "vpaid-ad",
  "version": "1.0.12",
  "description": "VPAID ad class for extending purposes.",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard",
    "babel": "./node_modules/.bin/babel -d lib src",
    "browserify": "browserify src/index.js -o dist/vpaid-ad.js",
    "watchify": "watchify src/index.js -o dist/vpaid-ad.js",
    "build": "npm run lint && npm run babel && npm run browserify",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kahwee/vpaid-ad.git"
  },
  "author": "KahWee Teng <t@kw.sg>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kahwee/vpaid-ad/issues"
  },
  "homepage": "https://github.com/kahwee/vpaid-ad#readme",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.10.4",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "standard": "^7.1.2"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "standard": {
    "ignore": [
      "scripts/**",
      "dist/**",
      "build/**",
      "coverage/**",
      "lib/**"
    ],
    "globals": [
      "parent",
      "describe",
      "it",
      "expect",
      "before"
    ]
  },
  "keywords": [
    "vpaid",
    "ad",
    "adtech",
    "vast",
    "debugging",
    "advertisement",
    "unit"
  ]
}
